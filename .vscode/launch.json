    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run DEV",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/index.js"
            ,"env": {
                "NODE_ENV": "development"
                
            }
        }, 

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run PRODUCTION",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/index.js"
            ,"env": {
                "NODE_ENV": "production"
            }
        }
    ]
}